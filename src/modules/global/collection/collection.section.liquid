{%- assign collection = collections[section.settings.collection] -%}
<div data-section-id="{{ section.id }}" data-module="collection"> 
    <div class="container container--md">
      <div class="section-title-container">
        {% if section.settings.title != blank %}
            <h2 class="h2 section-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
            <div class="section-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
      <div class="featured-products-carousel">
        {% for product in collection.products %}
            {% include 'product-card' %}
        {% endfor %}
      </div>
      {% if  section.settings.button_text != blank %}
        <div class="button-container align-c">
          {% render 'button' with {
            mod_type: 'link',
            mod_value: section.settings.button_text,
            mod_href: collection.url,
            mod_class: 'btn'
          } %}
        </div>
      {% endif; %}
    </div>
</div>
{% schema %}
{
  "name": "Featured collection",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Featured collection"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
